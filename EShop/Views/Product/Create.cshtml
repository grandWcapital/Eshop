@using EShop.ModelViews
@model CreateProductViewModel

<form asp-action="Create" method="post">
    <div>
        <label>Name</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Description</label>
        <textarea asp-for="Description"></textarea>
    </div>
    <div>
        <label>Price</label>
        <input asp-for="Price" type="number" step="0.01" />
    </div>
    <div>
        <label>Image URL</label>
        <input asp-for="Image" />
    </div>
    <div>
        <label>Stock</label>
        <input asp-for="NumberInStock" type="number" />
    </div>
    <div>
        <label>Categories</label>
        <select asp-for="CategoryIds" asp-items="Model.AllCategories" multiple class="form-control"></select>
    </div>

    <button type="submit">Create Product</button>
</form>
